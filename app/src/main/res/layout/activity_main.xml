<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.methawee.myapplication.main.book.BookActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button_cart"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="#a5ddd2"
            android:elevation="16dp"
            android:text="SEE CART â™¡"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listview_books"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_cart"
            android:layout_marginBottom="17dp"></ListView>

        <Button
            android:id="@+id/sort_title"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:text="SORT BY TITLE"
            android:background="#a5ddd2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/button_cart"
            android:layout_alignBottom="@+id/button_cart"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp" />

        <Button
            android:id="@+id/sort_year"
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:text="SORT BY YEAR"
            android:background="#a5ddd2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/button_cart"
            android:layout_alignBottom="@+id/button_cart"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
